{
  "app-id": "com.yPhil.Emulsion",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "23.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "emulsion",
  "finish-args": [
    "--share=network",
    "--socket=x11",
    "--socket=wayland",
    "--device=dri",
    "--filesystem=home"
  ],
  "modules": [
    {
      "name": "emulsion",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm755 emulsion /app/bin/emulsion",
        "cp -r * /app/",
        "install -Dm644 com.yPhil.Emulsion.desktop /app/share/applications/com.yPhil.Emulsion.desktop",
        "install -Dm644 icons/hicolor/512x512/apps/com.yPhil.Emulsion.png /app/share/icons/hicolor/512x512/apps/com.yPhil.Emulsion.png"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/yPhil-gh/Emulsion/releases/download/<TAG>/emulsion-linux-unpacked.tar.gz",
          "sha256": "<AUTO-FILLED-BY-WORKFLOW>"
        },
        {
          "type": "file",
          "path": "com.yPhil.Emulsion.desktop"
        },
        {
          "type": "file",
          "path": "icons/hicolor/512x512/apps/com.yPhil.Emulsion.png"
        }
      ]
    }
  ]
}
