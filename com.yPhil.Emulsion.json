{
  "app-id": "com.yPhil.Emulsion",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "24.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "emulsion",
  "finish-args": [
    "--share=ipc",
    "--socket=x11",
    "--socket=wayland",
    "--device=dri",
    "--filesystem=home"
  ],
  "modules": [
    {
      "name": "emulsion",
      "buildsystem": "simple",
      "build-commands": [
        "npm ci --omit=dev",
        "npm run build",
        "install -Dm755 dist/linux-unpacked/emulsion /app/bin/emulsion",
        "install -Dm644 ../com.yPhil.Emulsion.desktop /app/share/applications/com.yPhil.Emulsion.desktop",
        "install -Dm644 ../com.yPhil.Emulsion.png /app/share/icons/hicolor/256x256/apps/com.yPhil.Emulsion.png"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/yPhil-gh/Emulsion/archive/refs/tags/v0.9.20.tar.gz",
          "sha256": "df5f0ee6864622d8beed06841a897b8d9033b30cd8a6b00b5c921b2b793058e7"
        },
        {
          "type": "file",
          "path": "com.yPhil.Emulsion.desktop"
        },
        {
          "type": "file",
          "path": "com.yPhil.Emulsion.png"
        }
      ]
    }
  ]
}
