{
  "app-id": "com.yPhil.Emulsion",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "23.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "emulsion",
  "finish-args": [
    "--socket=wayland",
    "--socket=fallback-x11",
    "--share=network",
    "--filesystem=home",
    "--filesystem=host",
    "--device=dri",
    "--talk-name=org.freedesktop.DBus",
    "--talk-name=org.freedesktop.portal.Desktop"
  ],
  "modules": [
    {
      "name": "emulsion",
      "buildsystem": "simple",
      "build-commands": [
        "cp -r linux-unpacked/* /app/",
        "chmod +x /app/emulsion",
        "install -Dm644 ../com.yPhil.Emulsion.desktop /app/share/applications/com.yPhil.Emulsion.desktop",
        "install -Dm644 ../com.yPhil.Emulsion.png /app/share/icons/hicolor/512x512/apps/com.yPhil.Emulsion.png"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/yPhil-gh/Emulsion/releases/download/0.9.28/linux-unpacked.tar.gz",
          "sha256": "5963992a9b4f1026c9353e747376931283f07f93881c5f3246798acc40bd4d9c"
        },
        {
          "type": "file",
          "path": "com.yPhil.Emulsion.desktop"
        },
        {
          "type": "file",
          "path": "com.yPhil.Emulsion.png"
        }
      ]
    }
  ]
}
